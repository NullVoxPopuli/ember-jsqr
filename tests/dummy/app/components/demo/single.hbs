<div data-test-single-camera-demo>
{{! BEGIN-SNIPPET single-demo.hbs }}
<JSQR::Scanner
  @cameraStream={{this.cameraStream}}
  @onData={{this.handleData}}
/>

<br>

<Button {{on 'click' this.toggleCamera}}>
  {{#if this.isCameraActive}}
    Stop Camera
  {{else}}
    Start Camera
  {{/if}}
</Button>

<br>

<label>Last Detected Data:</label> {{this.lastDetectedData}}
{{! END-SNIPPET }}
</div>
